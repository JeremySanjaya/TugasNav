<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c5f3fa"

    tools:context=".bangun_datar.segitiga">

    <TextView
        android:id="@+id/segitiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Luas Segitiga"
        android:textColor="@color/biru_tua"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rumus"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/rumus_segitiga"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/segitiga" />

    <TextView
        android:id="@+id/hasil"
        android:layout_width="305dp"
        android:layout_height="36dp"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hitung" />

    <TextView
        android:id="@+id/hitung"
        android:layout_width="285dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:text="Hitung"
        android:textAlignment="center"
        android:textColor="@color/biru_tua"
        android:textSize="36dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rumus" />


    <EditText
        android:id="@+id/panjang"
        android:layout_width="312dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:hint="masukkan panjang alasnya"
        android:inputType="number"
        android:maxLength="5"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hasil" />

    <EditText
        android:id="@+id/tinggi"
        android:layout_width="312dp"
        android:layout_height="42dp"
        android:hint="masukkan tingginya"
        android:inputType="number"
        android:maxLength="5"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/panjang" />

    <Button
        android:id="@+id/btn_hasil"
        android:layout_width="197dp"
        android:layout_height="62dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/background"
        android:backgroundTint="@color/biru_aqua"
        android:text="Hasil"
        android:textColor="@color/biru_tua"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tinggi" />
</androidx.constraintlayout.widget.ConstraintLayout>